<xtml ns="gstudio" light="false"><Component id="UpdateStudioCurrentCssXml" type="action.Action" execution="native" /><Component id="CustomizeStyle" type="action.Action">  <xtml t="action.RunActions">     <Data t="gstudio.SelectedFieldXtml" />     <Action t="action.IfThenElse">        <If t="yesno.IsEmpty" Value="%FieldAspect[@t='jbart_app.CssFromSettings']%" />                <Then t="action.RunActions">         <Var name="Style" t="data.FirstSucceeding">           <Item value="%$_JBartStudio/SelectedFieldXtml/Style%" />           <Item value="%$_JBartStudio/SelectedFieldXtml/FieldType/Style%" />           <Item value="%$_JBartStudio/SelectedFieldXtml/SectionStyle%" />           <Item value="%$_JBartStudio/SelectedFieldXtml/Layout%" />         </Var>         <Condition t="yesno.NotEmpty" Value="%$Style%" />         <Action t="action.RunActions">           <Condition t="yesno.NotInList" Item="%$Style/@t%">              <List t="text.Split" Separator="," Data="ui.CustomStyle,ui.CustomCss,ui.CustomStyleByField" />            </Condition>            <Action t="field_dt.DoCustomizeStyle" Data="%$Style%" />         </Action>         <Action t="field_dt.OpenCustomPTDesigner" Data="%$Style%" UseNewDesigner="true" />        </Then>        <Else t="jbart_app.OpenJBartAppFloatingCssEditor" CssID="%FieldAspect[@t='jbart_app.CssFromSettings']/@CssID%" />     </Action>  </xtml></Component></xtml>