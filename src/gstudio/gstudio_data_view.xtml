<xtml ns="gstudio_data_view" light="false">   <Component id="ShowDataView" type="action.Action">    <xtml t="popup.OpenPopup" PopupTitle="Data View">    	<Var name="SelectedField" t="gstudio.SelectedFieldXtml" />      <Style t="gstudio.StudioFloatingPopup" />      <Feature t="gstudio.StudioFloatingPopupFeatures" Identifier="data view" />      <Contents t="field.InnerPage">      	<Field t="gstudio_data_view.DataView" />      </Contents>    </xtml>   </Component>   <Component id="DataView" type="field.Fields">      <xtml t="control.Layout">        <Var name="Root" varScope="Component" t="data.WritableText"/>        <Field t="fld.Field" FieldData="%$Root%" ID="top" Title="Top">          <FieldType t="fld_type.Picklist" AllowEmptyValue="false" AllowValueNotInOptions="">            <Options t="editable_picklist.DynamicOptions">              <Options t="data.List">                <Item value="Current Data"/>                <Item value="%$_AppContext/AppXtml/DataResource/@ResourceID%"/>              </Options>            </Options>            <Style t="editable_picklist.JBartPicklist" Width="150px"/>          </FieldType>          <FieldAspect t="field_aspect.RefreshDependentFields" FieldsIds="dt_data_view_tree" RefreshOn="every click" RefreshScope="screen"/>        </Field>        <Field t="itemtree.Tree" Title="Data View Tree" ItemText="%Text%" ID="dt_data_view_tree">          <Style t="itemtree.Default"/>          <Items t="gstudio_data_view.DataViewItems" Root="%$Root%"/>          <ItemImage t="gstudio.StudioSmallImage" PositionInSprite="%ImageSpritePosition%"/>          <FieldAspect t="field_feature.Layout">            <Css><![CDATA[#this { padding-top: 6px; padding-right: 6px; padding-bottom: 6px; padding-left: 6px; }]]></Css>          </FieldAspect>        </Field>      </xtml>    </Component>   <Component id="DataViewItems" type="itemtree.Items" execution="native">   	<Param name="Root" />   </Component></xtml>