<xtml ns="css_designer">  <Component id="CssDesignerProperty" type="field.FieldAspect" light="false" execution="native">    <Param name="Property" />  </Component>  <Component id="CssDesignerAutoRefreshPreview" type="field.FieldAspect" light="false" execution="native" />  <Component id="CssDesigner" type="field.Fields" light="false">      <Param name="Css"/>      <xtml t="control.Layout" ID="jb_css_designer" Title="Css Designer">        <Layout t="layout.Default"/>        <Field t="fld.Field" FieldData="%$CssObject/Selector%" ID="selector" Title="Selector">          <FieldType t="fld_type.Picklist" AllowEmptyValue="" AllowValueNotInOptions="">            <Options t="editable_picklist.DynamicOptions" Options="%$CssObject/Xml/Css/@selector%"/>            <Style t="editable_picklist.JBartPicklistOld" Width="150px" MaxPopupHeight="250px"/>          </FieldType>          <FieldAspect t="fld_aspect.PicklistProperties" AutoRecalcOptions="" HideSearchBox="true"/>          <FieldAspect t="field_aspect.HandleEvent" Event="update">            <Action t="field.RefreshField" FireOnUpdate="" FieldID="Css_For_Selector" Scope="screen"/>          </FieldAspect>          <FieldAspect t="field_feature.Css">            <Css><![CDATA[#this {  position:absolute;  right: 0px;}#wrapper {}]]></Css>          </FieldAspect>        </Field>        <Field t="control.Layout" ID="Css_For_Selector" Title="Css For Selector">          <Layout t="layout.Vertical" Spacing="0"/>          <FieldAspect t="field_aspect.FieldData" FieldData="%$CssObject/Xml/Css[@selector='{$CssObject/Selector}']%"/>          <Field t="field.PropertySheet1" ID="Fields" Title="Fields">            <Style t="group.TitlesAboveFields" HorizontalSpacing="15px" VerticalSpacing="8px"/>            <Operations t="operation.Operations"/>            <Field t="fld.Field" FieldData="" ID="color" Title="Color">              <FieldType t="fld_type.EditableColor">                <Style t="editable_color.JSColor"/>              </FieldType>              <FieldAspect t="css_designer.CssDesignerProperty" Property="color"/>            </Field>          </Field>          <Field t="control.Layout" ID="Group1" Title="Xml for current selector">            <Field t="fld.Field" ID="xml" Title="Xml">              <FieldType t="fld_type.Text">                <Style t="uitext.CodeMirror" LineNumbers="false" LineWrapping="true" EnableFullScreen="true" Width="400px" Height="55px" Mode="xml"/>              </FieldType>              <FieldData t="xml.XmlToText" PrettyPrint="true"/>            </Field>            <Layout t="layout.Default"/>            <SectionStyle t="section.Default"/>          </Field>          <FieldAspect t="field_feature.Css">            <Css><![CDATA[#this {} #wrapper {}]]></Css>          </FieldAspect>          <FieldAspect t="field_feature.Css">            <Css><![CDATA[#this { padding-top: 20px; }#wrapper { }]]></Css>          </FieldAspect>        </Field>        <Field t="control.Layout" ID="Group" Title="Xml for all">          <Field t="fld.Field" ID="xml" Title="Xml">            <FieldType t="fld_type.Text">              <Style t="uitext.CodeMirror" LineNumbers="false" LineWrapping="true" EnableFullScreen="true" Width="400px" Height="57px" Mode="xml"/>            </FieldType>            <FieldData t="data.Pipeline">              <Item value="%$CssObject/Xml%"/>              <Item t="xml.XmlToText" PrettyPrint="true"/>            </FieldData>          </Field>          <Layout t="layout.Default"/>          <SectionStyle t="section.Default"/>          <FieldAspect t="field_feature.Css">            <Css><![CDATA[#this { padding-top: 10px; }#wrapper { }]]></Css>          </FieldAspect>        </Field>        <FieldAspect t="field_aspect.Variable" VarName="CssObject">          <Value t="object.Object">            <Property name="Xml" value="%$Xml%"/>            <Var name="Xml" t="css_dt.Css2Xml" Css="%$Css%"/>            <Property name="Selector" value="%$Selector%"/>            <Var name="Selector" t="data.Pipeline">              <Item value="%$Xml/Css/@selector%"/>              <Aggregator t="data.First"/>            </Var>            <Method name="WriteXmlToCss" t="xml.WriteCData" Element="%$Css%">              <CDataText t="css_dt.Xml2Css" Xml="%%"/>            </Method>            <Method name="RefreshPreview" t="field_dt.RefreshPreview"/>          </Value>        </FieldAspect>        <FieldAspect t="field_feature.Css">          <Css><![CDATA[#this { position:relative; }#wrapper { }]]></Css>        </FieldAspect>      </xtml>    </Component></xtml>